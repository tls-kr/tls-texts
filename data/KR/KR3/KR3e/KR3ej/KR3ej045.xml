        <div n="h2" xml:id="KR3ej045_jc_000-d2d24">
          <head n="h2" xml:id="KR3ej045_jc_000-d2.d24h1">
            <seg xml:id="KR3ej045_jc_000-d2.d24.h1s1">痘瘡壞症已黑</seg>
          </head>
          <p xml:id="KR3ej045_jc_000-d2.d24p2">
            <seg xml:id="KR3ej045_jc_000-d2.d24.p2s1">痘瘡壞症已黑者<c n="，"/>
            </seg>
            <seg xml:id="KR3ej045_jc_000-d2.d24.p2s2">人將棄之<c n="，"/>
            </seg>
            <seg xml:id="KR3ej045_jc_000-d2.d24.p2s3">藥下喉即活<c n="。"/>
            </seg>
          </p>
<p xml:id="KR3ej045_jc_000-d2.d24p4">
            <seg xml:id="KR3ej045_jc_000-d2.d24.p4s1">方用<c n="："/>
            </seg>
