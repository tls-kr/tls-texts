<div n="h1" xml:id="KR3el002_jc_000-d2">
        <head n="h1" xml:id="KR3el002_jc_000-d2h1">
          <seg xml:id="KR3el002_jc_000-d2.h1s1">正文</seg>
        </head>
        <p xml:id="KR3el002_jc_000-d2p2">
          <seg xml:id="KR3el002_jc_000-d2.p2s1">接骨一道手中出<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p2s2">須看出臼與折骨<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p4">
          <seg xml:id="KR3el002_jc_000-d2.p4s1">肩骨跌出最易見<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p4s2">上肩骨子自聳出<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p6">
          <seg xml:id="KR3el002_jc_000-d2.p6s1">舉手不能上至頭<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p6s2">疼痛難熬全無力<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p8">
          <seg xml:id="KR3el002_jc_000-d2.p8s1">若遇此症要醫他<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p8s2">手法妙中好頃刻<c n="。"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p10">
          <seg xml:id="KR3el002_jc_000-d2.p10s1">令人兩手騎跨抱<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p10s2">坐正其身莫偏側<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p12">
          <seg xml:id="KR3el002_jc_000-d2.p12s1">一手將來拽下臂<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p12s2">一手推其肩上骨<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p14">
          <seg xml:id="KR3el002_jc_000-d2.p14s1">兩手一時齊拽動<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p14s2">自然入臼陷充溢<c n="。"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p16">
          <seg xml:id="KR3el002_jc_000-d2.p16s1">若用此法未見功<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p16s2">肩下須當用竹筒<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p18">
          <seg xml:id="KR3el002_jc_000-d2.p18s1">兩頭隨力略抬起<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p18s2">我舉兩手如上弓<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p20">
          <seg xml:id="KR3el002_jc_000-d2.p20s1">重用氣力只一拽<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p20s2">拽上之時痛不凶<c n="。"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p22">
          <seg xml:id="KR3el002_jc_000-d2.p22s1">中臂臼出最難識<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p22s2">屈則難伸伸難屈<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p24">
          <seg xml:id="KR3el002_jc_000-d2.p24s1">且將好臂比別他<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p24s2">骨子若出自然屈<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p26">
          <seg xml:id="KR3el002_jc_000-d2.p26s1">令人用手捏上臂<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p26s2">我將下臂用拽直<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p28">
          <seg xml:id="KR3el002_jc_000-d2.p28s1">舉手之中要用巧<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p28s2">須向內邊略一側<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p30">
          <seg xml:id="KR3el002_jc_000-d2.p30s1">隨手屈之又要伸<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p30s2">放手叫他自伸屈<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p32">
          <seg xml:id="KR3el002_jc_000-d2.p32s1">若還腫脹難屈伸<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p32s2">其中消息要詳精<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p34">
          <seg xml:id="KR3el002_jc_000-d2.p34s1">向內向外頻轉側<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p34s2">須審骨節無磚聲<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p36">
          <seg xml:id="KR3el002_jc_000-d2.p36s1">無聲無礙好之音<c n="。"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p38">
          <seg xml:id="KR3el002_jc_000-d2.p38s1">近手骱出也難認<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p38s2">看他高骨方為定<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p40">
          <seg xml:id="KR3el002_jc_000-d2.p40s1">高骨偏時骱必偏<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p40s2">高骨正時骱必正<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p42">
          <seg xml:id="KR3el002_jc_000-d2.p42s1">高骨非是診脈骨<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p42s2">手骱底邊高骨起<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p44">
          <seg xml:id="KR3el002_jc_000-d2.p44s1">醫人看處要分明<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p44s2">治法無非用拽直<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p46">
          <seg xml:id="KR3el002_jc_000-d2.p46s1">且將其骨將上抬<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p46s2">活動頻頻要仰抑<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p48">
          <seg xml:id="KR3el002_jc_000-d2.p48s1">將他大拇指來伸<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p48s2">又伸大拇指下骨<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p50">
          <seg xml:id="KR3el002_jc_000-d2.p50s1">方才筋骨得和平<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p50s2">要好且須半月日<c n="。"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p52">
          <seg xml:id="KR3el002_jc_000-d2.p52s1">近骱臂骨懸半寸<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p52s2">此骨若損如折骨<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p54">
          <seg xml:id="KR3el002_jc_000-d2.p54s1">治用薄杉板綁之<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p54s2">扎縛須教他挺直<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p56">
          <seg xml:id="KR3el002_jc_000-d2.p56s1">近手扎縛莫太緊<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p56s2">委曲不得反成疾<c n="。"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p58">
          <seg xml:id="KR3el002_jc_000-d2.p58s1">又有一種鎖子骨<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p58s2">近肩橫連在喉側<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p60">
          <seg xml:id="KR3el002_jc_000-d2.p60s1">此骨若出無臼藏<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p60s2">若折之時易補葺<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p62">
          <seg xml:id="KR3el002_jc_000-d2.p62s1">或出或折但㩒平<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p62s2">就將圍藥厚攤勻<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p64">
          <seg xml:id="KR3el002_jc_000-d2.p64s1">要加綿絮來包裹<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p64s2">更用桑皮按㩒平<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p66">
          <seg xml:id="KR3el002_jc_000-d2.p66s1">抄肩綁縛用腳帶<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p66s2">復絡患手在胸心<c n="。"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p68">
          <seg xml:id="KR3el002_jc_000-d2.p68s1">背梁骨出如何驗<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p68s2">上下參差不得平<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p70">
          <seg xml:id="KR3el002_jc_000-d2.p70s1">扶正患人席地坐<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p70s2">用布抄胸吊上身<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p72">
          <seg xml:id="KR3el002_jc_000-d2.p72s1">上身一起骨便見<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p72s2">急將手去㩒須平<c n="。"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p74">
          <seg xml:id="KR3el002_jc_000-d2.p74s1">肋骨折時須指按<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p74s2">按其骨節聽其聲<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p76">
          <seg xml:id="KR3el002_jc_000-d2.p76s1">按著之時須用綁<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p76s2">綿絮加之急裹身<c n="。"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p78">
          <seg xml:id="KR3el002_jc_000-d2.p78s1">臀髀骨出最難看<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p78s2">坐得平時無大患<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p80">
          <seg xml:id="KR3el002_jc_000-d2.p80s1">扶他好足平直立<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p80s2">放下患足自然見<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p82">
          <seg xml:id="KR3el002_jc_000-d2.p82s1">膀出側外骨出里<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p82s2">若內里側出外面<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p84">
          <seg xml:id="KR3el002_jc_000-d2.p84s1">令他仰臥端正身<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p84s2">兩手舉足用一伸<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p86">
          <seg xml:id="KR3el002_jc_000-d2.p86s1">隨將腳按其內踝<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p86s2">一拽仍須要屈伸<c n="。"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p88">
          <seg xml:id="KR3el002_jc_000-d2.p88s1">惟有膝蓋骨無臼<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p88s2">跌失之時難依舊<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p90">
          <seg xml:id="KR3el002_jc_000-d2.p90s1">用藥圍定用圈箍<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p90s2">總然成疾也無咎<c n="。"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p92">
          <seg xml:id="KR3el002_jc_000-d2.p92s1">膝蓋骨下中臼骨<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p92s2">此骨生來未易出<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p94">
          <seg xml:id="KR3el002_jc_000-d2.p94s1">若出之時也可醫<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p94s2">用力一伸再一屈<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p96">
          <seg xml:id="KR3el002_jc_000-d2.p96s1">轉側內外看來由<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p96s2">骨入之時自平直<c n="。"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p98">
          <seg xml:id="KR3el002_jc_000-d2.p98s1">腳骱骨出最難醫<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p98s2">一出外邊便難入<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p100">
          <seg xml:id="KR3el002_jc_000-d2.p100s1">此骨若出成疾多<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p100s2">十好三四病六七<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p102">
          <seg xml:id="KR3el002_jc_000-d2.p102s1">若遇此症要醫之<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p102s2">醫家全在手指力<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p104">
          <seg xml:id="KR3el002_jc_000-d2.p104s1">頻伸腳背揉寬筋<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p104s2">大拇指頭向一抵<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p106">
          <seg xml:id="KR3el002_jc_000-d2.p106s1">抵入之時隨縛住<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p106s2">圍藥膏貼兩相宜<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p108">
          <seg xml:id="KR3el002_jc_000-d2.p108s1">若還不入病一世<c n="。"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p108s2">又有一種模糊疾<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p110">
          <seg xml:id="KR3el002_jc_000-d2.p110s1">但覺腫痛不出骨<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p110s2">此等雖為跌撲輕<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p112">
          <seg xml:id="KR3el002_jc_000-d2.p112s1">若要速好也難得<c n="。"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p114">
          <seg xml:id="KR3el002_jc_000-d2.p114s1">四肢骨折皮不破<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p114s2">折在中間好調護<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p116">
          <seg xml:id="KR3el002_jc_000-d2.p116s1">治法輕輕要拽齊<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p116s2">拽其捏平疾不做<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p118">
          <seg xml:id="KR3el002_jc_000-d2.p118s1">速將圍藥包裹之<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p118s2">綁板兩頭齊臼縛<c n="。"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p120">
          <seg xml:id="KR3el002_jc_000-d2.p120s1">若是骨子近臼折<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p120s2">綁板須宜透臼結<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p122">
          <seg xml:id="KR3el002_jc_000-d2.p122s1">委曲臼邊板休透<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p122s2">免致筋骨不動活<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p124">
          <seg xml:id="KR3el002_jc_000-d2.p124s1">如包脹腫並血疱<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p124s2">銀針挑破生肌抹<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p126">
          <seg xml:id="KR3el002_jc_000-d2.p126s1">六七日後縛若寬<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p126s2">再換圍藥隨力扎<c n="。"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p128">
          <seg xml:id="KR3el002_jc_000-d2.p128s1">又有皮破血淋漓<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p128s2">皮開骨露甚恐危<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p130">
          <seg xml:id="KR3el002_jc_000-d2.p130s1">治法也要輕拽入<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p130s2">生肌散抹膏藥隨<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p132">
          <seg xml:id="KR3el002_jc_000-d2.p132s1">夏月須當露傷口<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p132s2">香油時上免生蛆<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p134">
          <seg xml:id="KR3el002_jc_000-d2.p134s1">或有些小碎骨出<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p134s2">不須驚懼耐心醫<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p136">
          <seg xml:id="KR3el002_jc_000-d2.p136s1">諸般骨節俱堪醫<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p136s2">天靈蓋破無藥醫<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p138">
          <seg xml:id="KR3el002_jc_000-d2.p138s1">天柱之骨在頂內<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p138s2">若還跌出極為危<c n="。"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p140">
          <seg xml:id="KR3el002_jc_000-d2.p140s1">下頦脫落如何驗<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p140s2">口角流涎齒下齊<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p142">
          <seg xml:id="KR3el002_jc_000-d2.p142s1">口角若正是雙落<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p142s2">口角歪斜單落醫<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p144">
          <seg xml:id="KR3el002_jc_000-d2.p144s1">令人背後抱住額<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p144s2">兩手捧其腮頰骨<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p146">
          <seg xml:id="KR3el002_jc_000-d2.p146s1">二大拇指入口中<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p146s2">盡齒根頭捏著實<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p148">
          <seg xml:id="KR3el002_jc_000-d2.p148s1">輕輕拽出向上攙<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p148s2">隨用一拽自平復<c n="。"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p150">
          <seg xml:id="KR3el002_jc_000-d2.p150s1">如覺指下嘰然聲<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p150s2">不須放手目暫停<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p152">
          <seg xml:id="KR3el002_jc_000-d2.p152s1">試看入臼未入臼<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p152s2">妙法無機在性靈<c n="。"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p154">
          <seg xml:id="KR3el002_jc_000-d2.p154s1">單落一邊用指治<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p154s2">治法無過悉如此<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p156">
          <seg xml:id="KR3el002_jc_000-d2.p156s1">若醫此疾漫心機<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p156s2">心性魯莽徒然耳<c n="。"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p158">
          <seg xml:id="KR3el002_jc_000-d2.p158s1">此訣傳來百有年<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p158s2">倭寇燒燼無遺編<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p160">
          <seg xml:id="KR3el002_jc_000-d2.p160s1">吾今略舉其驗過<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p160s2">雖為俚語實心傳<c n="，"/>
          </seg>
        </p>
<p xml:id="KR3el002_jc_000-d2p162">
          <seg xml:id="KR3el002_jc_000-d2.p162s1">若使後人能世習<c n="，"/>
          </seg>
          <seg xml:id="KR3el002_jc_000-d2.p162s2">濟人利己兩周全<c n="。"/>
          </seg>
        </p>
</div>
