                    <seg xml:id="CH2b1561_CHANT_001-1a.55">卒斬諸呂<c n="，"/>
                    </seg>
                    <seg xml:id="CH2b1561_CHANT_001-1a.56">以安太宗<c n="。"/>
                    </seg>
                    <seg xml:id="CH2b1561_CHANT_001-1a.57">今操惡直醜正<c n="，"/>
                    </seg>
                    <seg xml:id="CH2b1561_CHANT_001-1a.58">實繁有徒<c n="，"/>
                    </seg>
                    <seg xml:id="CH2b1561_CHANT_001-1a.59">包藏禍心<c n="，"/>
                    </seg>
                    <seg xml:id="CH2b1561_CHANT_001-1a.60">篡盜已顯<c n="。"/>
                    </seg>
                    <seg xml:id="CH2b1561_CHANT_001-1a.61">既宗室微弱<c n="，"/>
                    </seg>
                    <seg xml:id="CH2b1561_CHANT_001-1a.62">帝族無位<c n="，"/>
                    </seg>
                    <seg xml:id="CH2b1561_CHANT_001-1a.63">斟酌古式<c n="，"/>
                    </seg>
                    <seg xml:id="CH2b1561_CHANT_001-1a.64">依假權宜<c n="，"/>
                    </seg>
                    <seg xml:id="CH2b1561_CHANT_001-1a.65">上臣大司馬漢中王<c n="。"/>
                    </seg>
                    <seg xml:id="CH2b1561_CHANT_001-1a.66">臣伏自三省<c n="，"/>
                    </seg>
                    <seg xml:id="CH2b1561_CHANT_001-1a.67">受國厚恩<c n="，"/>
                    </seg>
                    <seg xml:id="CH2b1561_CHANT_001-1a.68">荷任一方<c n="，"/>
                    </seg>
                    <seg xml:id="CH2b1561_CHANT_001-1a.69">陳力未效<c n="，"/>
                    </seg>
                    <seg xml:id="CH2b1561_CHANT_001-1a.70">所獲已過<c n="，"/>
                    </seg>
                    <seg xml:id="CH2b1561_CHANT_001-1a.71">不宜復忝高位以重罪謗<c n="。"/>
                    </seg>
                    <seg xml:id="CH2b1561_CHANT_001-1a.72">群僚見逼<c n="，"/>
                    </seg>
                    <seg xml:id="CH2b1561_CHANT_001-1a.73">迫臣以義<c n="。"/>
                    </seg>
                    <seg xml:id="CH2b1561_CHANT_001-1a.74">臣退惟寇賊不梟<c n="，"/>
