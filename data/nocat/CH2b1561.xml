                    <seg xml:id="CH2b1561_CHANT_001-1a.79">若應權通變<c n="，"/>
                    </seg>
                    <seg xml:id="CH2b1561_CHANT_001-1a.80">以寍靖聖朝<c n="，"/>
                    </seg>
                    <seg xml:id="CH2b1561_CHANT_001-1a.81">雖赴水火<c n="，"/>
