         <div>
                
<head xml:id="CH2c1293_CHANT_001-1a.1-h-h">
                    <seg xml:id="CH2c1293_CHANT_001-1a.1-h">《荀綽晉後略》</seg>
                </head>
            <p>
                    <seg xml:id="CH2c1293_CHANT_001-1a.1"/>
                    <seg xml:id="CH2c1293_CHANT_001-1a.2">晉武帝</seg>
                </p>
            <p>
                    <seg xml:id="CH2c1293_CHANT_001-1a.3">世祖自平吳之後<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-1a.4">天下無事<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-1a.5">不能復孜孜於事物<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-1a.6">始寵用后黨<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-1a.7">由此祖禰採擇嬪媛不拘<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-1a.8">拘華門父兄<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-1a.9">以之罪亹<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-1a.10">非正形之謂<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-1a.11">扃禁以之攢聚<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-1a.12">實耽穢之甚<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-1a.13">昔武王伐紂<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-1a.14">歸<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-1a.15">傾宮之女<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-1a.16">助紂為虐<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-1a.17">而世祖平皓<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-1a.18">納吳姬五千<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-1a.19">是同皓之弊也<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1293_CHANT_001-2a.1"/>
                    <seg xml:id="CH2c1293_CHANT_001-2a.2">
                        <c n="《"/>群書治要<c n="》"/>二十九引<c n="《"/>荀綽略記<c n="》"/>
                        <c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1293_CHANT_001-2a.3">賈后</seg>
                </p>
            <p>
                    <seg xml:id="CH2c1293_CHANT_001-2a.4">賈后既殺楊庶人於金墉城<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-2a.5">又信妖巫謂后既死<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-2a.6">必訴怨於先帝<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-2a.7">乃覆而殯之<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-2a.8">施諸厭劾符書藥物<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-2a.9">以含瘞之<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1293_CHANT_001-3a.1"/>
                    <seg xml:id="CH2c1293_CHANT_001-3a.2">
                        <c n="《"/>御覽<c n="》"/>一百三十八<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1293_CHANT_001-3a.3">賈后以鹿車出承明東掖東門<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-3a.4">詣金墉城<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-3a.5">食金屑而死<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1293_CHANT_001-3a.6">成都王</seg>
                </p>
            <p>
                    <seg xml:id="CH2c1293_CHANT_001-3a.7">成都王圍京邑<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-3a.8">城中魚肉無出營<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-3a.9">巷賣死驢<c n="、"/>馬肉<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-3a.10">雜死人肉賣之<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1293_CHANT_001-4a.1"/>
                    <seg xml:id="CH2c1293_CHANT_001-4a.2">
                        <c n="《"/>御覽<c n="》"/>八百二十八引<c n="《"/>晉後記<c n="》"/>
                        <c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1293_CHANT_001-4a.3">成都王圍京邑<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-4a.4">城中無菜<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-4a.5">採陳韭芥<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-4a.6">以為膳菜<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1293_CHANT_001-4a.7">
                        <c n="《"/>御覽<c n="》"/>九百七十六<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1293_CHANT_001-5a.1"/>
                    <seg xml:id="CH2c1293_CHANT_001-5a.2">張方</seg>
                </p>
            <p>
                    <seg xml:id="CH2c1293_CHANT_001-5a.3">張方兵入洛諸官府大劫<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-5a.4">掠御寶<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-5a.5">織成流蘇<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-5a.6">皆分剖為帴<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1293_CHANT_001-5a.7">
                        <c n="《"/>御覽<c n="》"/>八百十六<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1293_CHANT_001-6a.1"/>
                    <seg xml:id="CH2c1293_CHANT_001-6a.2">張方圍京邑<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-6a.3">金堰<c n="、"/>千溝渠枯涸<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-6a.4">井多無泉<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1293_CHANT_001-6a.5">
                        <c n="《"/>御覽<c n="》"/>七十三<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1293_CHANT_001-6a.6">荀勗</seg>
                </p>
            <p>
                    <seg xml:id="CH2c1293_CHANT_001-6a.7">鍾律之器<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-6a.8">自周之末廢<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-6a.9">而漢成<c n="、"/>哀之間<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-6a.10">諸儒脩而治之<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-6a.11">至後漢末<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-6a.12">復隳矣<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-6a.13">魏氏使協律知音者杜夔造之<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-6a.14">不能考之典禮<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-6a.15">徒依於時絲管之聲<c n="、"/>時之尺寸而制之<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-6a.16">甚乖失禮度<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-6a.17">於是世祖命中書監荀勗<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-6a.18">依典制<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-6a.19">定鍾律<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-6a.20">既鑄律管<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-6a.21">募求古器<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-6a.22">得周時玉律數枚<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-6a.23">比之不差<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-6a.24">又諸郡舍倉庫<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-6a.25">或有漢時故鍾<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-6a.26">以律命之<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-6a.27">皆不叩而應<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-6a.28">聲音韻合<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-6a.29">又若俱成<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1293_CHANT_001-7a.1"/>
                    <seg xml:id="CH2c1293_CHANT_001-7a.2">
                        <c n="《"/>世說<c n="‧"/>術解篇<c n="》"/>注<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1293_CHANT_001-7a.3">劉漠</seg>
                </p>
            <p>
                    <seg xml:id="CH2c1293_CHANT_001-7a.4">漠少以清識為名<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-7a.5">與王夷甫友善<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-7a.6">並好以人倫為意<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-7a.7">故世人許以才知之名<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-7a.8">自相國石■長史出為襄州刺史<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-7a.9">以貴簡稱<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1293_CHANT_001-8a.1"/>
                    <seg xml:id="CH2c1293_CHANT_001-8a.2">
                        <c n="《"/>世說<c n="‧"/>賞譽篇<c n="》"/>注<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1293_CHANT_001-8a.3">馮播</seg>
                </p>
            <p>
                    <seg xml:id="CH2c1293_CHANT_001-8a.4">播<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-8a.5">字友聲<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-8a.6">長樂人<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-8a.7">位至大宗正<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-8a.8">生蓀<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1293_CHANT_001-9a.1"/>
                    <seg xml:id="CH2c1293_CHANT_001-9a.2">
                        <c n="《"/>世說<c n="‧"/>賞譽篇<c n="》"/>注<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1293_CHANT_001-9a.3">武含<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-9a.4">字景緯<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-9a.5">官歷中庶子<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-9a.6">遷散騎常侍<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-9a.7">以母在日誨云<c n="："/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-9a.8">
                        <c n="「"/>汝修其意<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-9a.9">仕當為尚書郎<c n="。"/>
                        <c n="」"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-9a.10">懼進<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-9a.11">敘有違前言<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1293_CHANT_001-9a.12">乃辭常侍為吏部郎<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1293_CHANT_001-10a.1"/>
                    <seg xml:id="CH2c1293_CHANT_001-10a.2">武含</seg>
                </p>
            <p>
                    <seg xml:id="CH2c1293_CHANT_001-10a.3">
                        <c n="《"/>御覽<c n="》"/>二百十六引<c n="《"/>荀綽晉後略<c n="》"/>
                        <c n="。"/>
                    </seg>
                </p>
         </div>
