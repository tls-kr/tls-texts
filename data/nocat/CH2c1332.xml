         <div>
                
<head xml:id="CH2c1332_CHANT_001-1a.1-h-h">
                    <seg xml:id="CH2c1332_CHANT_001-1a.1-h">《宋躬孝子傳》</seg>
                </head>
            <p>
                    <seg xml:id="CH2c1332_CHANT_001-1a.1"/>
                    <seg xml:id="CH2c1332_CHANT_001-1a.2">宋躬孝子傳</seg>
                </p>
            <p>
                    <seg xml:id="CH2c1332_CHANT_001-1a.3">郭巨<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-1a.4">河內溫人也<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-1a.5">妻生男<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-1a.6">謀曰<c n="："/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-1a.7">
                        <c n="「"/>養子則不得營業<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-1a.8">妨於供養<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-1a.9">當殺而埋焉<c n="。"/>
                        <c n="」"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-1a.10">鍤入地<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-1a.11">有黃金一釜<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-1a.12">上有鐵券曰<c n="："/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-1a.13">黃金一釜<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-1a.14">賜孝子郭巨<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-1a.15">
                        <c n="《"/>御覽<c n="》"/>八百十一<c n="、"/>
                        <c n="《"/>初學記<c n="》"/>十七<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1332_CHANT_001-2a.1"/>
                    <seg xml:id="CH2c1332_CHANT_001-2a.2">夏侯訢<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-2a.3">字長況<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-2a.4">梁國寧陵人也<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-2a.5">母疾<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-2a.6">遽經危困<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-2a.7">訢衣不釋帶<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-2a.8">二年<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-2a.9">母不忍見其辛苦<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-2a.10">使出便寢息<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-2a.11">訢出寢臥<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-2a.12">忽夢見其父來曰<c n="："/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-2a.13">
                        <c n="「"/>汝母病源深痼<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-2a.14">天帝矜汝至孝<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-2a.15">賜藥在屋後桑樹上<c n="。"/>
                        <c n="」"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-2a.16">訢乃驚起<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-2a.17">如言<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-2a.18">得藥<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-2a.19">而取水和進之<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-2a.20">便得痊差<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-2a.21">
                        <c n="《"/>御覽<c n="》"/>四百十一<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1332_CHANT_001-3a.1"/>
                    <seg xml:id="CH2c1332_CHANT_001-3a.2">韋俊<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-3a.3">字文高<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-3a.4">京兆杜陵人<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-3a.5">嘗與父共有所之<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-3a.6">夜宿逆旅<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-3a.7">時多虎<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-3a.8">將曉<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-3a.9">虎遶屋號吼<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-3a.10">俊乃出戶當之<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-3a.11">虎弭耳屈膝<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-3a.12">伏而不動<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-3a.13">俊跪曰<c n="："/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-3a.14">
                        <c n="「"/>汝饑可食我<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-3a.15">不宜驚吾老親<c n="。"/>
                        <c n="」"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-3a.16">虎逡巡而退<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-3a.17">屋人皆安全<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-3a.18">
                        <c n="《"/>御覽<c n="》"/>仝上<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1332_CHANT_001-4a.1"/>
                    <seg xml:id="CH2c1332_CHANT_001-4a.2">伍襲<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-4a.3">字世茂<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-4a.4">武陵人<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-4a.5">父沒羗中<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-4a.6">乃學羗語言衣服與賓客<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-4a.7">八構諸羗<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-4a.8">令相攻<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-4a.9">襲乘其仇羗<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-4a.10">負喪而歸<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-4a.11">葬畢<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-4a.12">因居墓所<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-4a.13">每哭<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-4a.14">輒有鹿踞墳而鳴<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-4a.15">漢法死事之孤皆拜郎中<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-4a.16">而襲不忍受<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-4a.17">吏迫之<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-4a.18">乃掘室逃其中<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-4a.19">吏不知處<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-4a.20">
                        <c n="《"/>御覽<c n="》"/>仝上<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1332_CHANT_001-5a.1"/>
                    <seg xml:id="CH2c1332_CHANT_001-5a.2">繆斐<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-5a.3">字文雅<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-5a.4">東海蘭陵人<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-5a.5">父忽患疾<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-5a.6">醫藥不給<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-5a.7">斐晝夜叩頭<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-5a.8">不寢不食<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-5a.9">氣息將盡<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-5a.10">至三更中<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-5a.11">忽有二神引鎖而至<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-5a.12">求裴曰<c n="："/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-5a.13">
                        <c n="「"/>尊府君昔經見侵<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-5a.14">故有怒報<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-5a.15">君至孝所感<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-5a.16">昨為天曹所攝錄<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-5a.17">鎖鋃鐺<c n="。"/>
                        <c n="」"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-5a.18">斐驚起<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-5a.19">視父已差<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-5a.20">父云<c n="："/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-5a.21">
                        <c n="「"/>吾病怛見二人見持向來<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-5a.22">忽不見<c n="。"/>
                        <c n="」"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-5a.23">裴乃具說<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-5a.24">父曰<c n="："/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-5a.25">
                        <c n="「"/>吾昔過伍子胥廟<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-5a.26">引二神像置地<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-5a.27">當是此也<c n="。"/>
                        <c n="」"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-5a.28">
                        <c n="《"/>御覽<c n="》"/>仝上<c n="、"/>六百四十四<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1332_CHANT_001-6a.1"/>
                    <seg xml:id="CH2c1332_CHANT_001-6a.2">紀邁<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.3">廬江人<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.4">本姓舒<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.5">以五月五日生<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.6">母棄之<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.7">村人紀淳妻趙氏養之<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.8">年六歲<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.9">本父母時來看<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.10">語曰<c n="："/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.11">
                        <c n="「"/>汝是我生邁<c n="。"/>
                        <c n="」"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.12">泣涕告趙<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.13">趙乃具言始末<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.14">及年十歲<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.15">傭力所得<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.16">輒分二母各半<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.17">淳亡<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.18">無子<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.19">邁乃斬衰三年<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.20">本父母繼亡<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.21">又並齊衰心喪三年<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.22">趙欲為娶<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.23">齎酒米往婚家<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.24">道遇醉人打趙<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.25">體悶<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.26">忽有一狗直至<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.27">銜邁衣者三<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.28">邁心動<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.29">走赴婚家<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.30">逢醉人適共舉酌於草中<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.31">邁乃以擔殺二醉人<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.32">趙歸得平<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.33">乃詣縣首<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.34">令宥之<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.35">乃誓不娶<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.36">後邁嘗寢<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.37">忽有一女言姓衛<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.38">昨忽暴死<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.39">天神矜愍君無妻<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.40">故使相報<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.41">邁具說其狀<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.42">母子至衛門外<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.43">果如言<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.44">送喪上車<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.45">牛不肯動<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.46">趙乃與主人具敘說之<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.47">主人開柩<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.48">女有氣息<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.49">至晚便語<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.50">具說始末如趙所言<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.51">遂為夫婦<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.52">趙卒<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.53">邁絕復蘇者日數四<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.54">邁五十嘗病<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.55">幾死<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.56">夢神曰<c n="："/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.57">
                        <c n="「"/>君行至孝<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.58">延歷將得百歲<c n="。"/>
                        <c n="」"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.59">果九十七而卒<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-6a.60">
                        <c n="《"/>御覽<c n="》"/>仝上四百十一<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1332_CHANT_001-7a.1"/>
                    <seg xml:id="CH2c1332_CHANT_001-7a.2">張景允六歲喪母<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-7a.3">母遺物悉散施<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-7a.4">唯留一畫扇<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-7a.5">每感思<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-7a.6">輒開匣流涕<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-7a.7">父邵為吳興太守<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-7a.8">暴疾報至<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-7a.9">天雪水涸<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-7a.10">便徒跣上岸<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-7a.11">左右捉履靺<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-7a.12">遂發都<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-7a.13">夜晝三日半至郡<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-7a.14">入郭奉諱<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-7a.15">氣絕吐血<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-7a.16">久乃蘇<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-7a.17">
                        <c n="《"/>藝文類聚<c n="》"/>二十<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1332_CHANT_001-8a.1"/>
                    <seg xml:id="CH2c1332_CHANT_001-8a.2">宗承<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-8a.3">字世林<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-8a.4">父資喪<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-8a.5">葬舊塋<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-8a.6">負土作墳<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-8a.7">不役僮僕<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-8a.8">一夕間<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-8a.9">土壤自高五尺<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-8a.10">松竹生焉<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-8a.11">
                        <c n="《"/>御覽<c n="》"/>四百十一<c n="、"/>
                        <c n="《"/>白帖<c n="》"/>引仝<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1332_CHANT_001-9a.1"/>
                    <seg xml:id="CH2c1332_CHANT_001-9a.2">吳坦之<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-9a.3">隱之兄也<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-9a.4">母葬<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-9a.5">夕設九飯祭<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-9a.6">坦之每臨一祭<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-9a.7">輒號慟斷絕<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-9a.8">至七祭<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-9a.9">吐血而死<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-9a.10">
                        <c n="《"/>藝文類聚<c n="》"/>二十<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1332_CHANT_001-10a.1"/>
                    <seg xml:id="CH2c1332_CHANT_001-10a.2">桑虞喪父<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-10a.3">年十四<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-10a.4">毀瘠過禮<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-10a.5">日食百粒<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-10a.6">以糝藜藿<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-10a.7">
                        <c n="《"/>御覽<c n="》"/>八百五十九<c n="、"/>
                        <c n="《"/>藝文類聚<c n="》"/>二十<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1332_CHANT_001-10a.8">賈恩<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-10a.9">會稽諸暨人也<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-10a.10">母亡在殯<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-10a.11">為災火所燒<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-10a.12">恩及妻柏號哭赴火<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-10a.13">不及去<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-10a.14">鄰近拔助<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-10a.15">棺器得免<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-10a.16">恩<c n="、"/>柏二人髮膚燋烈<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-10a.17">須臾俱死<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-10a.18">元嘉四年榜門曰<c n="："/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-10a.19">孝<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-10a.20">蠲役三世<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-10a.21">
                        <c n="《"/>御覽<c n="》"/>四百十五<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1332_CHANT_001-11a.1"/>
                    <seg xml:id="CH2c1332_CHANT_001-11a.2">邱傑<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-11a.3">字偉跱<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-11a.4">吳興烏程人也<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-11a.5">遭母喪<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-11a.6">以熟菜有味<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-11a.7">不嘗於口<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-11a.8">病歲餘<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-11a.9">忽夢見母曰<c n="："/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-11a.10">
                        <c n="「"/>死止是分別耳<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-11a.11">何事乃爾荼苦<c n="？"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-11a.12">汝噉生菜<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-11a.13">遇蝦蟆毒<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-11a.14">靈床前有甌<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-11a.15">甌中三丸藥<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-11a.16">可取服之<c n="。"/>
                        <c n="」"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-11a.17">傑驚起<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-11a.18">果得甌<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-11a.19">甌中有藥<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-11a.20">服之<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-11a.21">下科斗子數升<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-11a.22">邱氏世寶此甌<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-11a.23">宋大明七年<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-11a.24">災火焚失<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-11a.25">
                        <c n="《"/>御覽<c n="》"/>四百十一<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1332_CHANT_001-12a.1"/>
                    <seg xml:id="CH2c1332_CHANT_001-12a.2">陳遺<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-12a.3">吳郡人<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-12a.4">少為郡吏<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-12a.5">母好食鐺底燋飯<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-12a.6">遺在役<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-12a.7">恒帶一囊<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-12a.8">每煮食<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-12a.9">輒錄其燋以貽母<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-12a.10">後孫恩亂<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-12a.11">聚得數升<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-12a.12">常帶自隨<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-12a.13">及逃竄<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-12a.14">多有餓死<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-12a.15">遺食此得活<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-12a.16">母晝夜泣涕<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-12a.17">目為失明<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-12a.18">耳無所聞<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-12a.19">遺還<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-12a.20">入戶再拜號咽<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-12a.21">母豁然有聞見<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-12a.22">
                        <c n="《"/>御覽<c n="》"/>仝上<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1332_CHANT_001-13a.1"/>
                    <seg xml:id="CH2c1332_CHANT_001-13a.2">孫棘<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-13a.3">彭城人<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-13a.4">事母至孝<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-13a.5">母臨亡<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-13a.6">以小兒薩屬棘<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-13a.7">特深友愛<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-13a.8">宋大明五年<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-13a.9">上募軍仵<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-13a.10">薩求代棘<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-13a.11">及後軍期應死<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-13a.12">棘<c n="、"/>薩爭死<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-13a.13">妻許氏又屬棘曰<c n="："/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-13a.14">
                        <c n="「"/>君當門戶<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-13a.15">豈可委罪小郎<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-13a.16">且大家臨終<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-13a.17">以小郎屬君<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-13a.18">竟未有妻息<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-13a.19">君已二兒<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-13a.20">死復何憾<c n="。"/>
                        <c n="」"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-13a.21">太守張岱表聞<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-13a.22">詔牓門<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-13a.23">宋世祖感其悌愛<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-13a.24">乃普增諸弟封秩<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-13a.25">
                        <c n="《"/>御覽<c n="》"/>四百十六<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1332_CHANT_001-14a.1"/>
                    <seg xml:id="CH2c1332_CHANT_001-14a.2">何子平事母至孝<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-14a.3">為揚州從事<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-14a.4">月俸得白米<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-14a.5">輒貨市粟麥<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-14a.6">人或問之<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-14a.7">荅曰<c n="："/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-14a.8">
                        <c n="「"/>尊老在東<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-14a.9">不辦常得米<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-14a.10">何容獨食白粲<c n="。"/>
                        <c n="」"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-14a.11">母喪<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-14a.12">年將六十<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-14a.13">有孺子之慕<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-14a.14">晝夜號叫<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-14a.15">暑避清涼<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-14a.16">冬不衣絮<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-14a.17">
                        <c n="《"/>類聚<c n="》"/>二十<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1332_CHANT_001-15a.1"/>
                    <seg xml:id="CH2c1332_CHANT_001-15a.2">王靈之</seg>
                </p>
            <p>
                    <seg xml:id="CH2c1332_CHANT_001-15a.3">王靈之年十三喪母<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-15a.4">三十三喪父<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-15a.5">二十年鹽醋不入口<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-15a.6">被病在床<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-15a.7">忽有一人來問疾<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-15a.8">謂之曰<c n="："/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-15a.9">
                        <c n="「"/>食橘當差<c n="。"/>
                        <c n="」"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-15a.10">俄而不見<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-15a.11">之庭中橘樹<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-15a.12">隆冬乃有三實<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-15a.13">食之<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-15a.14">病尋愈<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-15a.15">咸以為至孝所感<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-15a.16">
                        <c n="《"/>御覽<c n="》"/>四百十一<c n="、"/>九百六十六<c n="、"/>
                        <c n="《"/>藝文類聚<c n="》"/>八十六<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1332_CHANT_001-16a.1"/>
                    <seg xml:id="CH2c1332_CHANT_001-16a.2">華寶八歲<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-16a.3">義熙中<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-16a.4">父從軍<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-16a.5">語寶曰<c n="："/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-16a.6">
                        <c n="「"/>吾還<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-16a.7">當營婚冠<c n="。"/>
                        <c n="」"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-16a.8">值咸陽喪亂<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-16a.9">吉凶兩絕<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-16a.10">寶年六十<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-16a.11">遂不冠娶<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-16a.12">舉言流涕<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-16a.13">
                        <c n="《"/>類聚<c n="》"/>二十<c n="。"/>
                    </seg>
                </p>
            <p>
                    <seg xml:id="CH2c1332_CHANT_001-17a.1"/>
                    <seg xml:id="CH2c1332_CHANT_001-17a.2">韓靈珍<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-17a.3">東海剡人<c n="。"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-17a.4">喪母三年<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-17a.5">貧無所葬<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-17a.6">與弟靈敏共種瓜半畝<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-17a.7">欲以營殯<c n="，"/>
                    </seg>
                    <seg xml:id="CH2c1332_CHANT_001-17a.8">及瓜熟採賣<c n="，"/>
