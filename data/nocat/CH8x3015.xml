<head xml:id="CH8x3015_CHANT_001-1a.1-h-h" n="00E748">
                    <seg xml:id="CH8x3015_CHANT_001-1a.1-h">馬王堆漢墓帛書-&amp;CH-;穀食氣釋文</seg>
                </head>
            <p>
                    <seg xml:id="CH8x3015_CHANT_001-1a.1"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.2"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.3">●去穀者食石韋<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.4"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.5">朔日食質<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.6"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.7">日駕一節<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.8"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.9">旬五而止</seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.10">
                        <c n="；"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.11"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.12">旬</seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.13">六始銧<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.14"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.15">日□一</seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.16">節<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.17"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.18">至晦而復質<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.19"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.20">與月進退<c n="。"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.21"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.22">為首重足輕𦡊軫<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.23"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.24">則昫炊之<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.25"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.26">視利止<c n="。"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.27"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.28">食穀者食質而□<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.29"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.30">食氣</seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.31">者為昫</seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.32"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.33">炊<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.34"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.35">則以始卧與始興<c n="。"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.36"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.37">凡昫中息而炊<c n="。"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.38"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.39">年廿者朝廿暮廿</seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.40">
                        <c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.41"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.42">二日之</seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.43">莫二百<c n="；"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.44"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.45" n="JB001">
                        <c n="＃"/>
                        <c n="＃"/>年卅者朝卅莫卅<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.46"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.47">三日之莫三百<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.48"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.49">以此數誰之<c n="。"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.50"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.51">春食一去濁陽<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.52"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.53">和以銧</seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.54">光<c n="、"/>朝暇<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.55"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.56">昏清</seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.57"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.58"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.59">可<c n="。"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.60"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.61">夏食一去湯風<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.62"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.63">和以朝暇<c n="、"/>行暨<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.64"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.65">昏清可</seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.66">
                        <c n="。"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.67"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.68">秋食一去</seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.69">□□<c n="、"/>霜𩅢<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.70"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.71">霜霚</seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.72"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.73">和以輸陽<c n="、"/>銧<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.74"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.75">昏清可<c n="。"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.76"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.77">冬食一去凌陰<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.78"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.79">和以端</seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.80">陽<c n="、"/>銧光<c n="、"/>輸陽<c n="、"/>輸陰<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.81"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.82">昏清可</seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.83">
                        <c n="。"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.84"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.85">□□□</seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.86"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.87">□□者</seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.88">
                        <c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.89"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.90">□四塞<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.91"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.92">清風折首者也<c n="。"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.93"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.94">
                        <c n="‧"/>霜霚者<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.95"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.96">□□□□□□□<c n="。"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.97"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.98">濁陽者<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.99"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.100">黑四塞<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.101"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.102">天之亂氣也<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.103"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.104">及日出而霧也<c n="。"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.105"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.106">湯風者</seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.107">
                        <c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.108"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.109">□風也<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.110"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.111">熱而中人者也<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.112"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.113">日□<c n="。"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.114"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.115">凌陰</seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.116">者<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.117"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.118">入骨</seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.119"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.120">□□也</seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.121">
                        <c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.122"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.123">此五</seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.124">者不可食也<c n="。"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.125"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.126">
                        <c n="‧"/>朝暇者<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.127"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.128">□□□□□□□□□□□□□□□者<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.129"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.130">日出二干<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.131"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.132">春為濁□□□□□雲如蓋<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.133"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.134">蔽□□□□者也</seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.135">
                        <c n="。"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.136"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.137">□□者<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.138"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.139">苑</seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.140"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.141">□□□□□□夏昏清風也<c n="。"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.142"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.143">
                        <c n="‧"/>凡食□□□□□□□□□□□□□□□□□□食穀者食方</seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.144">
                        <c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.145"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.146">食</seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.147">氣者食員<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.148"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.149">員者天也<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.150"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.151">方者地也</seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.152">
                        <c n="。"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.153"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.154">□□□者北鄉</seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.155"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.156">□□□□□□□□多食<c n="。"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.157"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.158">
                        <c n="‧"/>□□□□□□□□□□□□□□□□□□□□□則和以端陽<c n="。"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.159"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.160">夏氣暇□□□□□□□□□□□□□多陰<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.161"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.162">日夜分□</seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.163"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.164">□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□為</seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.165">青附<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.166"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.167">青附即多朝暇<c n="。"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.168"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.169" n="JB001">朝<c n="＃"/>
                        <c n="＃"/>失氣為白附</seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.170">
                        <c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.171"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.172">白附</seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.173">即多銧光<c n="。"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.174"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.175">昏失氣為黑附<c n="，"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.176"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.177">黑附即多輸</seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.178"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.179">□<c n="。"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.180"/>
                    <seg xml:id="CH8x3015_CHANT_001-1a.181">□□□□□□□□□食毋〼<c n="。"/>
                    </seg>
                    <seg xml:id="CH8x3015_CHANT_001-1a.182"/>
                </p>
         </div>
