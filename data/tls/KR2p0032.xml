                        <c n="《"/>烈文<c n="》"/>曰<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0032_tls_001-28a.2">
                        <c n="「"/>亡競維人<c n="」"/>
                        <c n=","/>
                    </seg>
                    <seg xml:id="KR2p0032_tls_001-28a.3">
                        <c n="「"/>不顯維德<c n="」"/>
                        <c n=","/>
                    </seg>
                    <seg xml:id="KR2p0032_tls_001-28a.4">
                        <c n="「"/>于呼前王不忘<c n="」"/>
                        <c n=","/>
                    </seg>
                    <seg xml:id="KR2p0032_tls_001-28a.5" n=".">吾悅之</seg>
                    <seg xml:id="KR2p0032_tls_001-28a.6">
                        <c n="《"/>昊天有成命<c n="》"/>
