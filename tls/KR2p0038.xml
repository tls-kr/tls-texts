<body>
<div>

<p source="SHANGBO.CONGZHENG 2.7.1 (STRIP A1-2) JI XUSHENG 2: 54">
                    <pb xml:id="KR2p0038_tls_001-1a"/>
                    <seg xml:id="KR2p0038_tls_001-1a.1">聞之曰<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-1a.2">昔三代之明王之有天下者<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-1a.3">莫之予也<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-1a.4" n=".">而盡<c n="("/>
                        <c n="?"/>
                        <c n=")"/>取之</seg>
                    <seg xml:id="KR2p0038_tls_001-1a.5">民皆以為義<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-1a.6">夫是則守之以信<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-1a.7">教之以義<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-1a.8" n=".">行之以禮也</seg>
                    <seg xml:id="KR2p0038_tls_001-1a.9">其亂<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-1a.10">王予人邦家土地<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-1a.11">而民或弗義<c n=";"/>
                    </seg>
                </p>

<p source="SHANGBO.CONGZHENG 2.7.2 (STRIP A 3-4) JI XUSHENG 2: 54">
                    <pb xml:id="KR2p0038_tls_001-2a"/>
                    <seg xml:id="KR2p0038_tls_001-2a.1" n="...">
                        <c n="["/>
                        <c n="]"/> 禮則</seg>
                    <seg xml:id="KR2p0038_tls_001-2a.2">寡而為仁<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-2a.3">教之以刑</seg>
                    <seg xml:id="KR2p0038_tls_001-2a.4" n=".">則逐</seg>
                    <seg xml:id="KR2p0038_tls_001-2a.5">聞之曰<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-2a.6">善人<c n=","/>善人也<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-2a.7">是以得賢士一人<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-2a.8" n="...">一人譽 <c n="["/>
                        <c n="]"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-2a.9" n=".......">
                        <c n="["/>
                        <c n="]"/> 四鄰<c n="["/>
                        <c n="]"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-2a.10">失賢士一人<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-2a.11">謗亦隨是<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-2a.12">是故君子慎言</seg>
                    <seg xml:id="KR2p0038_tls_001-2a.13" n="...">而不慎事<c n="["/>
                        <c n="]"/>
                    </seg>
                </p>

<p source="SHANGBO.CONGZHENG 2.7.3 (STRIPS A15, A5) JI XUSHENG 2: 54">
                    <pb xml:id="KR2p0038_tls_001-3a"/>
                    <seg xml:id="KR2p0038_tls_001-3a.1">毋暴<c n="、"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-3a.2">毋虐<c n="、"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-3a.3">毋賊<c n="、"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-3a.4" n=".">毋貪</seg>
                    <seg xml:id="KR2p0038_tls_001-3a.5">不修不武<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-3a.6">謂之必成<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-3a.7">則暴<c n=";"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-3a.8">不教而殺<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-3a.9">則虐<c n=";"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-3a.10">命無時<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-3a.11">事必有期<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-3a.12">則賊<c n=";"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-3a.13">為利枉事</seg>
                    <seg xml:id="KR2p0038_tls_001-3a.14" n=".">則貪</seg>
                </p>

<p source="SHANGBO.CONGZHENG 2.7.4 (STRIP A5) JI XUSHENG 2: 55">
                    <pb xml:id="KR2p0038_tls_001-4a"/>
                    <seg xml:id="KR2p0038_tls_001-4a.1">聞之曰<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-4a.2">從政<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-4a.3">用五德<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-4a.4">固三制<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-4a.5" n=".">除十怨</seg>
                    <seg xml:id="KR2p0038_tls_001-4a.6">五德<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-4a.7">一曰寬<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-4a.8" n=".">二曰恭</seg>
                    <seg xml:id="KR2p0038_tls_001-4a.9">三曰惠<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-4a.10">四曰仁<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-4a.11" n=".">五曰敬</seg>
                </p>

<p source="SHANGBO.CONGZHENG 2.7.5 (STRIPS A6, A7) JI XUSHENG 2: 55">
                    <pb xml:id="KR2p0038_tls_001-5a"/>
                    <seg xml:id="KR2p0038_tls_001-5a.1">君子不寬</seg>
                    <seg xml:id="KR2p0038_tls_001-5a.2">則無以容百姓<c n=";"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-5a.3">不恭</seg>
                    <seg xml:id="KR2p0038_tls_001-5a.4">則無以除辱<c n=";"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-5a.5">不惠</seg>
                    <seg xml:id="KR2p0038_tls_001-5a.6">則無以聚民<c n=";"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-5a.7">不仁</seg>
                    <seg xml:id="KR2p0038_tls_001-5a.8">則無以行政<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-5a.9">不敬</seg>
                    <seg xml:id="KR2p0038_tls_001-5a.10" n=".">則事無成</seg>
                </p>

<p source="SHANGBO.CONGZHENG 2.7.6 (STRIPS A7, B1) JI XUSHENG 2: 55">
                    <pb xml:id="KR2p0038_tls_001-6a"/>
                    <seg xml:id="KR2p0038_tls_001-6a.1">三制<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-6a.2">持行<c n="、"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-6a.3">視上<c n="、"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-6a.4" n="...">卒食<c n="["/>
                        <c n="]"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-6a.5">
                        <c n="["/>九<c n="]"/> 曰</seg>
                    <seg xml:id="KR2p0038_tls_001-6a.6">犯人之務<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-6a.7">十曰</seg>
                    <seg xml:id="KR2p0038_tls_001-6a.8">口惠</seg>
                    <seg xml:id="KR2p0038_tls_001-6a.9" n=".">而不由</seg>
                </p>

<p source="SHANGBO.CONGZHENG 2.7.7 (STRIPS B1, B2) JI XUSHENG 2: 55">
                    <pb xml:id="KR2p0038_tls_001-7a"/>
                    <seg xml:id="KR2p0038_tls_001-7a.1">興邦家<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-7a.2">治政教<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-7a.3">從命<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-7a.4">則政不勞<c n=";"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-7a.5">容戒先慝<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-7a.6">則自己始<c n=";"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-7a.7">顯嘉勸信<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-7a.8">則偽不彰<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-7a.9">毋佔<c n="("/>
                        <c n="?"/>
                        <c n=")"/>民斂<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-7a.10">則同<c n=";"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-7a.11">不敷法盈惡<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-7a.12" n=".">則民不怨</seg>
                    <seg xml:id="KR2p0038_tls_001-7a.13" n="...">聞之曰<c n=":"/>  <c n="["/>
                        <c n="]"/>
                    </seg>
                </p>

<p source="SHANGBO.CONGZHENG 2.7.8 (STRIPS A8, A9) JI XUSHENG 2: 55">
                    <pb xml:id="KR2p0038_tls_001-8a"/>
                    <seg xml:id="KR2p0038_tls_001-8a.1" n="...">
                        <c n="["/>
                        <c n="]"/> 而不智</seg>
                    <seg xml:id="KR2p0038_tls_001-8a.2" n=".">則逢災害</seg>
                    <seg xml:id="KR2p0038_tls_001-8a.3">聞之曰<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-8a.4">從政有七幾<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-8a.5">确則凌<c n="("/>
                        <c n="?"/>
                        <c n=")"/>
                        <c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-8a.6">威則民不導<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-8a.7">鹵則失眾<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-8a.8">放則亡親<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-8a.9">罰則民逃<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-8a.10">好刑</seg>
                    <seg xml:id="KR2p0038_tls_001-8a.11" n="....">
                        <c n="["/>
                        <c n="]"/> 則民作亂</seg>
                    <seg xml:id="KR2p0038_tls_001-8a.12">凡此七者<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-8a.13" n=".">政之所殆也</seg>
                </p>

<p source="SHANGBO.CONGZHENG 2.7.9 (STRIPS A9, A10, A13) JI XUSHENG 2: 55">
                    <pb xml:id="KR2p0038_tls_001-9a"/>
                    <seg xml:id="KR2p0038_tls_001-9a.1">聞之曰<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-9a.2">志氣不旨<c n="["/>稽<c n="]"/> <c n="("/>
                        <c n="?"/>
                        <c n=")"/>
                        <c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-9a.3">其事不</seg>
                    <seg xml:id="KR2p0038_tls_001-9a.4">
                        <c n="["/>聞之<c n="]"/> 曰<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-9a.5">從政所務三<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-9a.6" n=".">敬<c n="、"/>誂 <c n="("/>
                        <c n="?"/>
                        <c n=")"/>
                        <c n="、"/>信</seg>
                    <seg xml:id="KR2p0038_tls_001-9a.7">信則得眾<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-9a.8">誂則遠戾<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-9a.9" n="...">遠戾所以 <c n="["/>
                        <c n="]"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-9a.10" n=".......">
                        <c n="["/>
                        <c n="]"/>然後能立道 <c n="["/>
                        <c n="]"/>
                    </seg>
                </p>

<p source="SHANGBO.CONGZHENG 2.7.10 (STRIPS A13, A14 A16) JI XUSHENG 2: 55">
                    <pb xml:id="KR2p0038_tls_001-10a"/>
                    <seg xml:id="KR2p0038_tls_001-10a.1">聞之曰<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-10a.2">君子之相就也<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-10a.3" n="...">不必在近昵樂 <c n="["/>
                        <c n="]"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-10a.4">有所有餘</seg>
                    <seg xml:id="KR2p0038_tls_001-10a.5">而不敢盡之<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-10a.6">有所不足</seg>
                    <seg xml:id="KR2p0038_tls_001-10a.7" n="...">而不敢弗 <c n="["/>
                        <c n="]"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-10a.8">以犯賡犯<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-10a.9">見不順行</seg>
                    <seg xml:id="KR2p0038_tls_001-10a.10" n=".">以出之</seg>
                </p>

<p source="SHANGBO.CONGZHENG 2.7.11 (STRIPS A16, B3) JI XUSHENG 2: 55-56">
                    <pb xml:id="KR2p0038_tls_001-11a"/>
                    <seg xml:id="KR2p0038_tls_001-11a.1">聞之曰<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-11a.2">君子樂則治政<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-11a.3" n="...">憂則 <c n="["/>
                        <c n="]"/> 復<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-11a.4">小人樂則疑<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-11a.5">憂則昏<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-11a.6">怒則勝<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-11a.7">懼則背<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-11a.8" n=".">恥則犯</seg>
                    <seg xml:id="KR2p0038_tls_001-11a.9">聞之曰<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-11a.10">從政<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-11a.11">不治則亂<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-11a.12" n="...">治也至則 <c n="["/>
                        <c n="]"/>
                    </seg>
                </p>

<p source="SHANGBO.CONGZHENG 2.7.12 (STRIP A17) JI XUSHENG 2: 56">
                    <pb xml:id="KR2p0038_tls_001-12a"/>
                    <seg xml:id="KR2p0038_tls_001-12a.1">
                        <c n="["/>君子先<c n="]"/> 人</seg>
                    <seg xml:id="KR2p0038_tls_001-12a.2">則啟道之<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-12a.3">後人</seg>
                    <seg xml:id="KR2p0038_tls_001-12a.4">則奉相之<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-12a.5">是以曰</seg>
                    <seg xml:id="KR2p0038_tls_001-12a.6">君子難得</seg>
                    <seg xml:id="KR2p0038_tls_001-12a.7">而易使也</seg>
                    <seg xml:id="KR2p0038_tls_001-12a.8">其使人<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-12a.9" n=".">器之</seg>
                </p>

<p source="SHANGBO.CONGZHENG 2.7.13 (STRIPS A17, A18) JI XUSHENG 2: 56">
                    <pb xml:id="KR2p0038_tls_001-13a"/>
                    <seg xml:id="KR2p0038_tls_001-13a.1">小人先人</seg>
                    <seg xml:id="KR2p0038_tls_001-13a.2" n=".">則絆敔之</seg>
                    <seg xml:id="KR2p0038_tls_001-13a.3">
                        <c n="["/>後人<c n="]"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-13a.4">則劫毀之<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-13a.5">是以曰</seg>
                    <seg xml:id="KR2p0038_tls_001-13a.6">小人易得</seg>
                    <seg xml:id="KR2p0038_tls_001-13a.7" n=".">而難使也</seg>
                    <seg xml:id="KR2p0038_tls_001-13a.8">其使人</seg>
                    <seg xml:id="KR2p0038_tls_001-13a.9" n=".">必求備焉</seg>
                </p>

<p source="SHANGBO.CONGZHENG 2.7.14 (STRIPS A18, A12, B5) JI XUSHENG 2: 56">
                    <pb xml:id="KR2p0038_tls_001-14a"/>
                    <seg xml:id="KR2p0038_tls_001-14a.1">聞之曰<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-14a.2">行在己</seg>
                    <seg xml:id="KR2p0038_tls_001-14a.3">而名在人<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-14a.4" n=".">名難爭也</seg>
                    <seg xml:id="KR2p0038_tls_001-14a.5">庸行不倦<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-14a.6">持善不厭<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-14a.7">雖世不識<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-14a.8">必或知之<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-14a.9">是故君子強行<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-14a.10" n=".">以待名之至也</seg>
                </p>

<p source="SHANGBO.CONGZHENG 2.7.15 (STRIPS B5, A11) JI XUSHENG 2: 56">
                    <pb xml:id="KR2p0038_tls_001-15a"/>
                    <seg xml:id="KR2p0038_tls_001-15a.1">君子聞善言<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-15a.2">以改其言<c n=";"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-15a.3">見善行<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-15a.4">納其身焉<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-15a.5" n=".">可謂學矣</seg>
                    <seg xml:id="KR2p0038_tls_001-15a.6">聞之曰<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-15a.7">可言</seg>
                    <seg xml:id="KR2p0038_tls_001-15a.8">而不可行<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-15a.9">君子不言<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-15a.10">可行</seg>
                    <seg xml:id="KR2p0038_tls_001-15a.11">而不可言<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-15a.12" n=".">君子不行</seg>
                </p>

<p source="SHANGBO.CONGZHENG 2.7.16 (STRIPS A19, B4) JI XUSHENG 2: 56">
                    <pb xml:id="KR2p0038_tls_001-16a"/>
                    <seg xml:id="KR2p0038_tls_001-16a.1" n="....">
                        <c n="["/>
                        <c n="]"/> 之人可也</seg>
                    <seg xml:id="KR2p0038_tls_001-16a.2">聞之曰<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-16a.3">行險</seg>
                    <seg xml:id="KR2p0038_tls_001-16a.4">致命<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-16a.5">飢滄</seg>
                    <seg xml:id="KR2p0038_tls_001-16a.6">而毋會<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-16a.7">從事</seg>
                    <seg xml:id="KR2p0038_tls_001-16a.8">而毋訟<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0038_tls_001-16a.9" n=".">君子不以流言傷人</seg>
