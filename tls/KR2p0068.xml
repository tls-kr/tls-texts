<p source="SHANGBO.WUWANGJIANZUO 7.39.9 (STRIPS 9-10) MACHENGYUAN 7: 159-161 TR. MARCO CABOARA">
                    <pb xml:id="KR2p0068_tls_001-1a"/>
                    <seg xml:id="KR2p0068_tls_001-1a.1">枝銘唯曰<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-1a.2">
                        <c n="“"/>惡危<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-1a.3" n=".">危於忿戾</seg>
                    <seg xml:id="KR2p0068_tls_001-1a.4">惡失道</seg>
                    <seg xml:id="KR2p0068_tls_001-1a.5" n=".">失道於嗜欲</seg>
                    <seg xml:id="KR2p0068_tls_001-1a.6" n="9">惡<c n="["/>
                        <c n="]"/>相忘<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-1a.7" n=".">相忘於貴富<c n="”"/>
                    </seg>
                </p>

<p source="SHANGBO.WUWANGJIANZUO 7.39.1 (STRIP 1) MACHENGYUAN 7: 151 TR. MARCO CABOARA">
                    <pb xml:id="KR2p0068_tls_001-2a"/>
                    <seg xml:id="KR2p0068_tls_001-2a.1">王問於師尚父曰<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-2a.2">不知黃帝<c n=","/>顓頊<c n=","/>堯<c n=","/>舜之道存乎<c n="?"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-2a.3">意<c n="["/>抑<c n="]"/>幾喪<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-2a.4">不可得</seg>
                    <seg xml:id="KR2p0068_tls_001-2a.5">而睹乎<c n="?"/>
                    </seg>
                </p>

<p source="SHANGBO.WUWANGJIANZUO 7.39.2 (STRIPS 1-2) MACHENGYUAN 7: 151-152 TR. MARCO CABOARA">
                    <pb xml:id="KR2p0068_tls_001-3a"/>
                    <seg xml:id="KR2p0068_tls_001-3a.1">師尚父曰<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-3a.2" n="1.">
                        <c n="["/>
                        <c n="]"/>在丹書</seg>
                    <seg xml:id="KR2p0068_tls_001-3a.3">王女<c n="("/>欲<c n=")"/>觀之<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-3a.4">盍齊<c n="["/>齋<c n="]"/>乎<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-3a.5" n=".">將以書見</seg>
                    <seg xml:id="KR2p0068_tls_001-3a.6">武王齊<c n="["/>齋<c n="]"/>三日<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-3a.7">端服帽<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-3a.8">逾堂阶<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-3a.9" n=".">南面而立</seg>
                </p>

<p source="SHANGBO.WUWANGJIANZUO 7.39.3 (STRIPS 2-4) MACHENGYUAN 7: 152-154 TR. MARCO CABOARA">
                    <pb xml:id="KR2p0068_tls_001-4a"/>
                    <seg xml:id="KR2p0068_tls_001-4a.1">師尚父<c n="["/>曰<c n="]"/>
                        <c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-4a.2" n="2">
                        <c n="["/>
                        <c n="]"/>
                        <c n="“"/>夫先王之書<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-4a.3" n=".">不與北面<c n="”"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-4a.4">武王西面而行<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-4a.5">曲折而南<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-4a.6" n=".">東面而立</seg>
                    <seg xml:id="KR2p0068_tls_001-4a.7">師尚父奉書<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-4a.8">道書之言曰<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-4a.9" n="3">
                        <c n="“"/>怠<c n="["/>
                        <c n="]"/> 勝義則喪<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-4a.10">義勝怠則長<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-4a.11">義勝欲則從<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-4a.12" n=".">欲勝義則兇</seg>
                </p>

<p source="SHANGBO.WUWANGJIANZUO 7.39.4 (STRIPS 4-5) MACHENGYUAN 7: 154-155 TR. MARCO CABOARA">
                    <pb xml:id="KR2p0068_tls_001-5a"/>
                    <seg xml:id="KR2p0068_tls_001-5a.1">仁以得之<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-5a.2">仁以守之<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-5a.3" n="4">其運百世<c n=";"/>
                        <c n="["/>
                        <c n="]"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-5a.4">不仁以得之<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-5a.5">仁以守之<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-5a.6">其運十世<c n=";"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-5a.7">不仁以得之<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-5a.8">不仁以守之<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-5a.9" n=".">及於身<c n="”"/>
                    </seg>
                </p>

<p source="SHANGBO.WUWANGJIANZUO 7.39.5 (STRIPS 5-6) MACHENGYUAN 7: 155-156 TR. MARCO CABOARA">
                    <pb xml:id="KR2p0068_tls_001-6a"/>
                    <seg xml:id="KR2p0068_tls_001-6a.1">武王聞之恐懼<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-6a.2" n="5">為銘<c n="["/>
                        <c n="]"/>於席之四端曰<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-6a.3" n=".">
                        <c n="“"/>安樂必戒<c n="”"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-6a.4">右端曰<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-6a.5" n=".">
                        <c n="“"/>毋行可悔<c n="”"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-6a.6">席後左端曰<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-6a.7">
                        <c n="“"/>民之反側<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-6a.8" n=".">亦不可<c n="["/>不<c n="]"/>志<c n="”"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-6a.9">後右端曰<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-6a.10">
                        <c n="["/>
                        <c n="“"/>□<c n="]"/>諫<c n="["/>殷鑒<c n="?"/>
                        <c n="]"/>不遠<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-6a.11" n=".">視而所代<c n="”"/>
                    </seg>
                </p>

<p source="SHANGBO.WUWANGJIANZUO 7.39.6 (STRIPS6-7 ) MACHENGYUAN 7: 156-157 TR. MARCO CABOARA">
                    <pb xml:id="KR2p0068_tls_001-7a"/>
                    <seg xml:id="KR2p0068_tls_001-7a.1">為機曰<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-7a.2" n="6">
                        <c n="“"/>惶惶惟謹<c n="["/>
                        <c n="]"/>口<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-7a.3">口生敬<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-7a.4">口生詬<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-7a.5" n=".">慎之口<c n="”"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-7a.6">鑒銘曰<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-7a.7">
                        <c n="“"/>見其前<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-7a.8" n=".7">必慮其後<c n="”"/> <c n="["/>
                        <c n="]"/>
                    </seg>
                </p>

<p source="SHANGBO.WUWANGJIANZUO 7.39.7 (STRIP 8) MACHENGYUAN 7: 158 TR. MARCO CABOARA">
                    <pb xml:id="KR2p0068_tls_001-8a"/>
                    <seg xml:id="KR2p0068_tls_001-8a.1">盥銘曰<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-8a.2">
                        <c n="“"/>與其溺於人<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-8a.3">寧溺於淵<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-8a.4">溺於淵猶可遊<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-8a.5" n=".">溺於人不可救<c n="”"/>
                    </seg>
                </p>

<p source="SHANGBO.WUWANGJIANZUO 7.39.8 (STRIPS 8-9) MACHENGYUAN 7: 158-159 TR. MARCO CABOARA">
                    <pb xml:id="KR2p0068_tls_001-9a"/>
                    <seg xml:id="KR2p0068_tls_001-9a.1">桯銘曰<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-9a.2">
                        <c n="“"/>毋曰何<c n="["/>可<c n="]"/>傷<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-9a.3" n=".8">禍將長<c n="["/>
                        <c n="]"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-9a.4">毋曰惡害<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-9a.5" n=".">禍將大</seg>
                    <seg xml:id="KR2p0068_tls_001-9a.6">毋曰何<c n="["/>可<c n="]"/>殘<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-9a.7" n=".">禍將然<c n="”"/>
                    </seg>
                </p>

<p source="SHANGBO.WUWANGJIANZUO 7.39.10 (STRIP 10) MACHENGYUAN 7: 161 TR. MARCO CABOARA">
                    <pb xml:id="KR2p0068_tls_001-10a"/>
                    <seg xml:id="KR2p0068_tls_001-10a.1">牖銘唯曰<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-10a.2">
                        <c n="“"/>位難得而易失<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-10a.3">士難得而易外<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-10a.4">無謹弗志<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-10a.5" n="H">曰 e said<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-10a.6" n=".">余知之</seg>
                    <seg xml:id="KR2p0068_tls_001-10a.7" n="10">毋<c n="["/>
                        <c n="]"/>
                    </seg>
                </p>

<p source="SHANGBO.WUWANGJIANZUO 7.39.11 (STRIP 11) MACHENGYUAN 7: 162 TR. MARCO CABOARA">
                    <pb xml:id="KR2p0068_tls_001-11a"/>
                    <seg xml:id="KR2p0068_tls_001-11a.1">武王問於太公望曰<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-11a.2">
                        <c n="“"/>亦有不盈於十言</seg>
                    <seg xml:id="KR2p0068_tls_001-11a.3">而百世不失之道<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-11a.4">有之乎<c n="?"/>
                        <c n="”"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-11a.5">太公望答曰<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-11a.6" n=".">
                        <c n="“"/>有<c n="”"/>
                    </seg>
                </p>

<p source="SHANGBO.WUWANGJIANZUO 7.39.12 (STRIPS 11-12) MACHENGYUAN 7: 162 TR. MARCO CABOARA">
                    <pb xml:id="KR2p0068_tls_001-12a"/>
                    <seg xml:id="KR2p0068_tls_001-12a.1">武王曰<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-12a.2" n="11">
                        <c n="“"/>其道可得以<c n="["/>
                        <c n="]"/>聞乎<c n="?"/>
                        <c n="”"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-12a.3">太公望答曰<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-12a.4">
                        <c n="“"/>身則君之臣<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-12a.5" n=".">道則聖人之道</seg>
                    <seg xml:id="KR2p0068_tls_001-12a.6">君齋<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-12a.7">將道之<c n=";"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-12a.8">君不祈<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-12a.9" n=".">則弗道<c n="”"/>
                    </seg>
                </p>

<p source="SHANGBO.WUWANGJIANZUO 7.39.13 (STRIPS 12-14) MACHENGYUAN 7: 162-164 TR. MARCO CABOARA">
                    <pb xml:id="KR2p0068_tls_001-13a"/>
                    <seg xml:id="KR2p0068_tls_001-13a.1">武王齋七日<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-13a.2" n="12.">太<c n="["/>
                        <c n="]"/> 公望奉丹書以朝</seg>
                    <seg xml:id="KR2p0068_tls_001-13a.3">太公南面<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-13a.4" n=".">武王北面而復問</seg>
                    <seg xml:id="KR2p0068_tls_001-13a.5">太公答曰<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-13a.6">
                        <c n="“"/>丹書之言有之曰<c n=":"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-13a.7" n="13">志勝欲則<c n="["/>
                        <c n="]"/>利<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-13a.8">欲勝志則喪<c n=";"/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-13a.9">志勝欲則從<c n=","/>
                    </seg>
                    <seg xml:id="KR2p0068_tls_001-13a.10" n=".">欲志則兇</seg>
                </p>

